<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_over_bg"
    tools:context=".viewModels.GameOverViewModel">

    <ImageView
        android:id="@+id/healthBar"
        android:layout_width="80dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/life_0" />

    <ImageButton
        android:id="@+id/bt_lout"
        android:layout_width="82dp"
        android:layout_height="73dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="120dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:contentDescription="@string/lvl8"
        android:onClick="resetProgress"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/androidesunabasura" />

</androidx.constraintlayout.widget.ConstraintLayout>